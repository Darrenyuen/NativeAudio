<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_record"
        android:text="StartRecord"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/hello_tv"
        app:layout_constraintRight_toRightOf="@+id/hello_tv"
        app:layout_constraintTop_toBottomOf="@+id/hello_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/stop_record"
        android:text="StopRecord"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/hello_tv"
        app:layout_constraintRight_toRightOf="@+id/hello_tv"
        app:layout_constraintTop_toBottomOf="@+id/start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/start_play"
        android:text="StartPlay"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/hello_tv"
        app:layout_constraintRight_toRightOf="@+id/hello_tv"
        app:layout_constraintTop_toBottomOf="@+id/stop_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/stop_play"
        android:text="StopPlay"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/hello_tv"
        app:layout_constraintRight_toRightOf="@+id/hello_tv"
        app:layout_constraintTop_toBottomOf="@+id/start_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>